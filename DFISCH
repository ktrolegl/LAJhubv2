-- Create game buttons
for i, script in ipairs(gameScripts) do
    local GameButton = Instance.new("TextButton")
    GameButton.Name = script.name
    GameButton.Parent = GamesList
    GameButton.BackgroundColor3 = colors.button
    GameButton.BorderSizePixel = 0
    GameButton.Size = UDim2.new(1, 0, 0, 50)
    GameButton.Font = Enum.Font.Gotham
    GameButton.Text = "  " .. script.name
    GameButton.TextColor3 = colors.text
    GameButton.TextSize = 14
    GameButton.TextXAlignment = Enum.TextXAlignment.Left
    ApplyCorners(GameButton, 6)
    
    -- Hover effect
    GameButton.MouseEnter:Connect(function()
        GameButton.BackgroundColor3 = colors.buttonHover
    end)
    
    GameButton.MouseLeave:Connect(function()
        GameButton.BackgroundColor3 = colors.button
    end)
    
    -- Click to load script
    GameButton.MouseButton1Click:Connect(function()
        LoadScript(script.url, script.game)
    end)
end

-- Update canvas size
local function UpdateCanvasSize()
    GamesList.CanvasSize = UDim2.new(0, 0, 0, GamesUIListLayout.AbsoluteContentSize.Y + 10)
end

UpdateCanvasSize()
GamesUIListLayout:GetPropertyChangedSignal("AbsoluteContentSize"):Connect(UpdateCanvasSize)

