-- Tab switching
local pages = {
    HomeButton = HomePage,
    GamesButton = GamesPage,
    CreditsButton = CreditsPage,
    SettingsButton = SettingsPage
}

local function SwitchPage(button)
    -- Hide all pages
    for _, page in pairs(pages) do
        page.Visible = false
    end
    
    -- Reset all icons
    HomeIcon.ImageColor3 = colors.text
    GamesIcon.ImageColor3 = colors.text
    CreditsIcon.ImageColor3 = colors.text
    SettingsIcon.ImageColor3 = colors.text
    
    -- Show selected page
    pages[button.Name].Visible = true
    
    -- Highlight selected icon
    button:FindFirstChild(button.Name:gsub("Button", "Icon")).ImageColor3 = colors.accent
end

HomeButton.MouseButton1Click:Connect(function()
    SwitchPage(HomeButton)
end)

GamesButton.MouseButton1Click:Connect(function()
    SwitchPage(GamesButton)
end)

CreditsButton.MouseButton1Click:Connect(function()
    SwitchPage(CreditsButton)
end)

SettingsButton.MouseButton1Click:Connect(function()
    SwitchPage(SettingsButton)
end)

-- Copy Discord link
CopyDiscordButton.MouseButton1Click:Connect(function()
    if setclipboard then
        setclipboard("discord.gg/lajhub")
        Notify("LAJ HUB", "Discord link copied to clipboard", 3, "success")
    else
        Notify("LAJ HUB", "Copy to clipboard not supported", 3, "error")
    end
end)

-- Game search functionality
GameSearchBar:GetPropertyChangedSignal("Text"):Connect(function()
    local searchText = GameSearchBar.Text:lower()
    
    for _, button in ipairs(GamesList:GetChildren()) do
        if button:IsA("TextButton") then
            if searchText == "" or string.find(button.Text:lower(), searchText) then
                button.Visible = true
            else
                button.Visible = false
            end
        end
    end
    
    UpdateCanvasSize()
end)

-- Initial highlight for home tab
HomeIcon.ImageColor3 = colors.accent

-- Welcome message
Notify("LAJ HUB", "Welcome to LAJ HUB! Select a game to begin.", 3, "accent")

-- Auto-detect game
local function AutoDetectGame()
    local gameId = game.PlaceId
    local gameName = game.Name:lower()
    
    for _, script in ipairs(gameScripts) do
        if string.find(gameName, script.game:lower()) then
            if AutoLoadToggle.BackgroundColor3 == colors.success then
                LoadScript(script.url, script.game)
                return true
            else
                Notify("LAJ HUB", "Detected: " .. script.game .. "\nEnable Auto-Load in settings to load automatically", 5, "info")
                return true
            end
        end
    end
    
    return false
end

-- Try to detect the game
if not AutoDetectGame() then
    -- No match found, show generic message
    Notify("LAJ HUB", "Select a game from the Games tab", 3, "info")
end

-- Update the auto-load toggle
AutoLoadToggle.MouseButton1Click:Connect(function()
    if AutoLoadToggle.BackgroundColor3 == colors.success then
        AutoLoadToggle.BackgroundColor3 = colors.button
        AutoLoadStatus.Text = "Disabled"
        AutoLoadStatus.TextColor3 = colors.subText
    else
        AutoLoadToggle.BackgroundColor3 = colors.success
        AutoLoadStatus.Text = "Enabled"
        AutoLoadStatus.TextColor3 = colors.success
    end
end)

-- Return the hub (for later access)
return LAJHub
