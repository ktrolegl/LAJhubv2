        -- For games without specific scripts
        local MainSection = CurrentGameTab:CreateSection(gameName .. " Scripts")
        
        CurrentGameTab:CreateParagraph({
            Title = "No Scripts Available",
            Content = "No specific scripts are available for " .. gameName .. " at this time."
        })
    end
    
    return CurrentGameTab
end

local GamesSection = ScriptsTab:CreateSection("Game Scripts")

-- Update available games in dropdown
ScriptsTab:CreateDropdown({
    Name = "Select Game",
    Options = {
        "Blox Fruits", 
        "Dead Rails", 
        "Muscle Legends", 
        "Fisch", 
        "The Strongest Battlegrounds", 
        "Arise Crossover", 
        "Bubble Gum Simulator", 
        "Anime Reborn", 
        "Anime Vanguards"
    },
    CurrentOption = "",
    Flag = "GameDropdown",
    Callback = function(Option)
        -- Create a tab for the selected game
        CreateGameTab(Option)
        
        Rayfield:Notify({
            Title = "Game Selected",
            Content = "Created tab for: " .. Option,
            Duration = 3,
        })
    end,
})

-- Settings Tab Content
local UISection = SettingsTab:CreateSection("UI Settings")

SettingsTab:CreateToggle({
    Name = "Save Configuration",
    CurrentValue = true,
    Flag = "SaveConfig",
    Callback = function(Value)
        Rayfield:Notify({
            Title = "Configuration",
            Content = Value and "Configuration saving enabled" or "Configuration saving disabled",
            Duration = 3,
        })
    end,
})

local ThemeColorPicker = SettingsTab:CreateColorPicker({
    Name = "UI Theme Color",
    Color = Color3.fromRGB(89, 150, 255),
