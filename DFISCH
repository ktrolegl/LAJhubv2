-- Colors scheme (dark with accent similar to the image)
local colors = {
    background = Color3.fromRGB(25, 25, 30), -- Dark background
    sidepanel = Color3.fromRGB(35, 35, 40), -- Slightly lighter for side panel
    topbar = Color3.fromRGB(30, 30, 35), -- Top bar color
    content = Color3.fromRGB(20, 20, 25), -- Content area
    accent = Color3.fromRGB(230, 230, 15), -- Yellow accent (like in the image)
    accentSecondary = Color3.fromRGB(130, 130, 240), -- Secondary accent (slight purple)
    text = Color3.fromRGB(255, 255, 255), -- White text
    textDim = Color3.fromRGB(180, 180, 180), -- Dimmed text
    button = Color3.fromRGB(45, 45, 55), -- Button color
    buttonHover = Color3.fromRGB(55, 55, 65), -- Button hover
    success = Color3.fromRGB(70, 200, 120), -- Success indicators
    error = Color3.fromRGB(240, 70, 70), -- Error indicators
    warning = Color3.fromRGB(240, 180, 60), -- Warning indicators
    separator = Color3.fromRGB(50, 50, 60) -- Line separators
}

-- Set the screen GUI properties
LAJHub.Name = "LAJHub"
LAJHub.ZIndexBehavior = Enum.ZIndexBehavior.Sibling
LAJHub.ResetOnSpawn = false
LAJHub.DisplayOrder = 100
pcall(function() LAJHub.Parent = game:GetService("CoreGui") end)
if not LAJHub.Parent then LAJHub.Parent = game:GetService("Players").LocalPlayer:WaitForChild("PlayerGui") end

-- Main frame setup
MainFrame.Name = "MainFrame"
MainFrame.Parent = LAJHub
MainFrame.BackgroundColor3 = colors.background
MainFrame.Position = UDim2.new(0.5, -250, 0.5, -175)
MainFrame.Size = UDim2.new(0, 500, 0, 350)
MainFrame.BorderSizePixel = 0
MainFrame.ClipsDescendants = true
MainFrame.Active = true
MainFrame.Draggable = true

-- Apply corner radius
MainCorner.Parent = MainFrame
