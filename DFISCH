                    Duration = 3,
                })
            end,
        })
        
    elseif gameName == "Arise Crossover" then
        local MainSection = CurrentGameTab:CreateSection("Arise Crossover Scripts")
        
        CurrentGameTab:CreateButton({
            Name = "Speed Hub X - Arise Crossover",
            Callback = function()
                loadstring(game:HttpGet("https://raw.githubusercontent.com/AhmadV99/Speed-Hub-X/main/Speed%20Hub%20X.lua", true))()
                Rayfield:Notify({
                    Title = "Speed Hub X",
                    Content = "Loading Speed Hub X for Arise Crossover...",
                    Duration = 3,
                })
            end,
        })
        
    elseif gameName == "Bubble Gum Simulator" then
        local MainSection = CurrentGameTab:CreateSection("Bubble Gum Simulator Scripts")
        
        CurrentGameTab:CreateButton({
            Name = "Speed Hub X - Bubble Gum Simulator INFINITY",
            Callback = function()
                loadstring(game:HttpGet("https://raw.githubusercontent.com/AhmadV99/Speed-Hub-X/main/Speed%20Hub%20X.lua", true))()
                Rayfield:Notify({
                    Title = "Speed Hub X",
                    Content = "Loading Speed Hub X for Bubble Gum Simulator INFINITY...",
                    Duration = 3,
                })
            end,
        })
        
    elseif gameName == "Anime Reborn" then
        local MainSection = CurrentGameTab:CreateSection("Anime Reborn Scripts")
        
        CurrentGameTab:CreateButton({
            Name = "Speed Hub X - Anime Reborn",
