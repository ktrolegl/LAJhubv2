-- Function to load script based on game selection
local function LoadGameScript(gameName)
    if gameName == "Blox Fruits" then
        loadstring(game:HttpGet("https://raw.githubusercontent.com/AhmadV99/Speed-Hub-X/main/Speed%20Hub%20X.lua", true))()
        Rayfield:Notify({
            Title = "Speed Hub X",
            Content = "Loading Speed Hub X for Blox Fruits...",
            Duration = 3,
        })
        
    elseif gameName == "Dead Rails" then
        loadstring(game:HttpGet("https://raw.githubusercontent.com/AhmadV99/Speed-Hub-X/main/Speed%20Hub%20X.lua", true))()
        Rayfield:Notify({
            Title = "Speed Hub X",
            Content = "Loading Speed Hub X for Dead Rails...",
            Duration = 3,
        })
        
    elseif gameName == "Muscle Legends" then
        loadstring(game:HttpGet("https://raw.githubusercontent.com/AhmadV99/Speed-Hub-X/main/Speed%20Hub%20X.lua", true))()
        Rayfield:Notify({
            Title = "Speed Hub X",
            Content = "Loading Speed Hub X for Muscle Legends...",
            Duration = 3,
        })
        
    elseif gameName == "Fisch" then
        loadstring(game:HttpGet("https://raw.githubusercontent.com/AhmadV99/Speed-Hub-X/main/Speed%20Hub%20X.lua", true))()
        Rayfield:Notify({
            Title = "Speed Hub X",
            Content = "Loading Speed Hub X for Fisch...",
            Duration = 3,
        })
        
    elseif gameName == "The Strongest Battlegrounds" then
        loadstring(game:HttpGet("https://raw.githubusercontent.com/AhmadV99/Speed-Hub-X/main/Speed%20Hub%20X.lua", true))()
        Rayfield:Notify({
            Title = "Speed Hub X",
            Content = "Loading Speed Hub X for The Strongest Battlegrounds...",
            Duration = 3,
        })
        
    elseif gameName == "Arise Crossover" then
        loadstring(game:HttpGet("https://raw.githubusercontent.com/AhmadV99/Speed-Hub-X/main/Speed%20Hub%20X.lua", true))()
        Rayfield:Notify({
            Title = "Speed Hub X",
            Content = "Loading Speed Hub X for Arise Crossover...",
            Duration = 3,
        })
        
    elseif gameName == "Bubble Gum Simulator" then
        loadstring(game:HttpGet("https://raw.githubusercontent.com/AhmadV99/Speed-Hub-X/main/Speed%20Hub%20X.lua", true))()
        Rayfield:Notify({
            Title = "Speed Hub X",
            Content = "Loading Speed Hub X for Bubble Gum Simulator INFINITY...",
            Duration = 3,
        })
        
    elseif gameName == "Anime Reborn" then
        loadstring(game:HttpGet("https://raw.githubusercontent.com/AhmadV99/Script-Games/main/Anime%20Reborn.lua"))()
        Rayfield:Notify({
            Title = "Speed Hub X",
            Content = "Loading Speed Hub X for Anime Reborn...",
            Duration = 3,
        })
        
    elseif gameName == "Anime Vanguards" then
        loadstring(game:HttpGet("https://raw.githubusercontent.com/AhmadV99/Script-Games/main/Anime%20Vanguards.lua"))()
        Rayfield:Notify({
            Title = "Speed Hub X",
            Content = "Loading Speed Hub X for Anime Vanguards...",
            Duration = 3,
        })
        
    else
        Rayfield:Notify({
            Title = "Script Not Found",
            Content = "No script available for " .. gameName,
            Duration = 3,
        })
    end
end

-- Game Scripts Section
local SpeedHubSection = ScriptsTab:CreateSection("Speed Hub X Scripts")

-- Update available games in dropdown that auto-loads scripts
ScriptsTab:CreateDropdown({
    Name = "Select Game to Auto-Load Script",
    Options = {
        "Blox Fruits", 
        "Dead Rails", 
        "Muscle Legends", 
        "Fisch", 
        "The Strongest Battlegrounds", 
        "Arise Crossover", 
        "Bubble Gum Simulator", 
        "Anime Reborn", 
        "Anime Vanguards"
    },
    CurrentOption = "",
    Flag = "GameDropdown",
    Callback = function(Option)
        -- Automatically load the script for the selected game
        LoadGameScript(Option)
    end,
})

-- Settings Tab Content
local UISection = SettingsTab:CreateSection("UI Settings")

SettingsTab:CreateToggle({
    Name = "Save Configuration",
    CurrentValue = true,
    Flag = "SaveConfig",
    Callback = function(Value)
        Rayfield:Notify({
            Title = "Configuration",
            Content = Value and "Configuration saving enabled" or "Configuration saving disabled",
