-- Settings items creation function
local function CreateToggleSetting(name, description, defaultState)
    local SettingFrame = Instance.new("Frame")
    local SettingName = Instance.new("TextLabel")
    local SettingDescription = Instance.new("TextLabel")
    local ToggleButton = Instance.new("TextButton")
    local ToggleInner = Instance.new("Frame")
    local ToggleCorner = Instance.new("UICorner")
    local InnerCorner = Instance.new("UICorner")
    local Separator = Instance.new("Frame")
    
    SettingFrame.Name = name.."Setting"
    SettingFrame.Parent = SettingsList
    SettingFrame.BackgroundTransparency = 1
    SettingFrame.Size = UDim2.new(1, 0, 0, 65)
    
    SettingName.Name = "Name"
    SettingName.Parent = SettingFrame
    SettingName.BackgroundTransparency = 1
    SettingName.Position = UDim2.new(0, 0, 0, 0)
    SettingName.Size = UDim2.new(1, -60, 0, 20)
    SettingName.Font = Enum.Font.GothamBold
    SettingName.Text = name
    SettingName.TextColor3 = colors.text
    SettingName.TextSize = 14
    SettingName.TextXAlignment = Enum.TextXAlignment.Left
    
    SettingDescription.Name = "Description"
    SettingDescription.Parent = SettingFrame
    SettingDescription.BackgroundTransparency = 1
    SettingDescription.Position = UDim2.new(0, 0, 0, 20)
    SettingDescription.Size = UDim2.new(1, -60, 0, 30)
    SettingDescription.Font = Enum.Font.Gotham
    SettingDescription.Text = description
    SettingDescription.TextColor3 = colors.textDim
    SettingDescription.TextSize = 12
    SettingDescription.TextWrapped = true
    SettingDescription.TextXAlignment = Enum.TextXAlignment.Left
    
    ToggleButton.Name = "Toggle"
    ToggleButton.Parent = SettingFrame
    ToggleButton.Position = UDim2.new(1, -50, 0, 10)
    ToggleButton.Size = UDim2.new(0, 40, 0, 20)
    ToggleButton.BackgroundColor3 = defaultState and colors.accent or colors.button
    ToggleButton.BorderSizePixel = 0
    ToggleButton.Text = ""
    ToggleButton.AutoButtonColor = false
    
    ToggleCorner.CornerRadius = UDim.new(0, 10)
    ToggleCorner.Parent = ToggleButton
    
    ToggleInner.Name = "Inner"
    ToggleInner.Parent = ToggleButton
    ToggleInner.Size = UDim2.new(0, 16, 0, 16)
    ToggleInner.Position = defaultState 
        and UDim2.new(1, -18, 0.5, -8) 
        or UDim2.new(0, 2, 0.5, -8)
    ToggleInner.BackgroundColor3 = colors.text
    ToggleInner.BorderSizePixel = 0
    
    InnerCorner.CornerRadius = UDim.new(0, 8)
    InnerCorner.Parent = ToggleInner
    
    Separator.Name = "Separator"
    Separator.Parent = SettingFrame
    Separator.BackgroundColor3 = colors.separator
    Separator.BorderSizePixel = 0
    Separator.Position = UDim2.new(0, 0, 1, -5)
    Separator.Size = UDim2.new(1, 0, 0, 1)
    
    -- Toggle functionality
    local enabled = defaultState
    ToggleButton.MouseButton1Click:Connect(function()
        enabled = not enabled
        ToggleInner:TweenPosition(
            enabled and UDim2.new(1, -18, 0.5, -8) or UDim2.new(0, 2, 0.5, -8),
            Enum.EasingDirection.InOut,
            Enum.EasingStyle.Quart,
            0.2,
            true
        )
        ToggleButton.BackgroundColor3 = enabled and colors.accent or colors.button
    end)
    
    return SettingFrame, enabled
end

-- Create settings
local AutoloadSetting, autoloadEnabled = CreateToggleSetting(
    "Auto-Load Scripts", 
    "Automatically load scripts when a compatible game is detected.",
    true
)

local PersistSetting, persistEnabled = CreateToggleSetting(
    "UI Always on Top", 
    "Keep the UI visible at all times, even when clicking elsewhere.",
    true
)

local NotificationsSetting, notificationsEnabled = CreateToggleSetting(
    "Show Notifications", 
    "Display notifications when scripts are loaded or actions completed.",
    true
)

-- Create game script buttons
local function CreateGameButton(name, scriptUrl, gameName)
    local GameButton = Instance.new("TextButton")
    local GameIcon = Instance.new("ImageLabel")
    local GameLabel = Instance.new("TextLabel")
    local ExecuteButton = Instance.new("TextButton")
    local ExecuteCorner = Instance.new("UICorner")
    local ButtonCorner = Instance.new("UICorner")
    
    GameButton.Name = gameName.."Button"
    GameButton.Parent = GamesList
    GameButton.BackgroundColor3 = colors.button
    GameButton.Size = UDim2.new(1, 0, 0, 50)
    GameButton.Text = ""
    GameButton.AutoButtonColor = false
    
    ButtonCorner.CornerRadius = UDim.new(0, 6)
    ButtonCorner.Parent = GameButton
    
    GameIcon.Name = "Icon"
    GameIcon.Parent = GameButton
    GameIcon.BackgroundTransparency = 1
    GameIcon.Position = UDim2.new(0, 10, 0.5, -15)
    GameIcon.Size = UDim2.new(0, 30, 0, 30)
    GameIcon.Image = "rbxassetid://7743878966" -- Game icon
    GameIcon.ImageColor3 = colors.accent
    
    GameLabel.Name = "Label"
    GameLabel.Parent = GameButton
    GameLabel.BackgroundTransparency = 1
    GameLabel.Position = UDim2.new(0, 50, 0, 0)
    GameLabel.Size = UDim2.new(1, -120, 1, 0)
    GameLabel.Font = Enum.Font.Gotham
    GameLabel.Text = name
    GameLabel.TextColor3 = colors.text
    GameLabel.TextSize = 14
    GameLabel.TextXAlignment = Enum.TextXAlignment.Left
    
    ExecuteButton.Name = "Execute"
    ExecuteButton.Parent = GameButton
    ExecuteButton.BackgroundColor3 = colors.accent
    ExecuteButton.Position = UDim2.new(1, -100, 0.5, -15)
    ExecuteButton.Size = UDim2.new(0, 90, 0, 30)
    ExecuteButton.Font = Enum.Font.GothamBold
    ExecuteButton.Text = "EXECUTE"
    ExecuteButton.TextColor3 = colors.background
    ExecuteButton.TextSize = 12
    ExecuteButton.AutoButtonColor = false
    
    ExecuteCorner.CornerRadius = UDim.new(0, 4)
    ExecuteCorner.Parent = ExecuteButton
    
    -- Hover effects
    GameButton.MouseEnter:Connect(function()
        GameButton.BackgroundColor3 = colors.buttonHover
    end)
    
    GameButton.MouseLeave:Connect(function()
        GameButton.BackgroundColor3 = colors.button
    end)
    
    ExecuteButton.MouseEnter:Connect(function()
        ExecuteButton.Size = UDim2.new(0, 92, 0, 32)
        ExecuteButton.Position = UDim2.new(1, -101, 0.5, -16)
    end)
    
    ExecuteButton.MouseLeave:Connect(function()
        ExecuteButton.Size = UDim2.new(0, 90, 0, 30)
        ExecuteButton.Position = UDim2.new(1, -100, 0.5, -15)
    end)
    
    -- Execute functionality
    ExecuteButton.MouseButton1Click:Connect(function()
        LoadScript(scriptUrl, gameName)
    end)
    
    return GameButton
end

-- Function to load a script
local function LoadScript(scriptUrl, gameName)
    pcall(function()
        loadstring(game:HttpGet(scriptUrl, true))()
    end)
    
    -- Show notification
    Notify(gameName, "Script loaded successfully!", 3, "success")
end

-- Create a notification function
local function Notify(title, message, duration, notifType)
    -- Define colors based on notification type
    local colors = {
        success = Color3.fromRGB(70, 200, 120),
        error = Color3.fromRGB(240, 70, 70),
        warning = Color3.fromRGB(240, 180, 60),
        info = Color3.fromRGB(70, 130, 220),
        default = Color3.fromRGB(230, 230, 15) -- Yellow accent
    }
    
    local notifColor = colors[notifType] or colors.default
    
    -- Create notification elements
    local Notification = Instance.new("Frame")
    local NotifCorner = Instance.new("UICorner")
    local NotifTitle = Instance.new("TextLabel")
    local TitleCorner = Instance.new("UICorner")
    local NotifMessage = Instance.new("TextLabel")
    local NotifShadow = Instance.new("ImageLabel")
    
    Notification.Name = "Notification"
    Notification.Parent = LAJHub
    Notification.BackgroundColor3 = Color3.fromRGB(30, 30, 35)
    Notification.BorderSizePixel = 0
    Notification.Position = UDim2.new(1, 10, 0.5, -40)
    Notification.Size = UDim2.new(0, 220, 0, 80)
    Notification.ZIndex = 101
    
    NotifCorner.CornerRadius = UDim.new(0, 8)
    NotifCorner.Parent = Notification
    
    NotifTitle.Name = "Title"
    NotifTitle.Parent = Notification
    NotifTitle.BackgroundColor3 = notifColor
    NotifTitle.BorderSizePixel = 0
    NotifTitle.Size = UDim2.new(1, 0, 0, 25)
    NotifTitle.ZIndex = 102
    NotifTitle.Font = Enum.Font.GothamBold
    NotifTitle.Text = "  " .. title
    NotifTitle.TextColor3 = Color3.fromRGB(255, 255, 255)
    NotifTitle.TextSize = 14
    NotifTitle.TextXAlignment = Enum.TextXAlignment.Left
    
    TitleCorner.CornerRadius = UDim.new(0, 8)
    TitleCorner.Parent = NotifTitle
    
    NotifMessage.Name = "Message"
    NotifMessage.Parent = Notification
    NotifMessage.BackgroundTransparency = 1
    NotifMessage.Position = UDim2.new(0, 10, 0, 30)
    NotifMessage.Size = UDim2.new(1, -20, 1, -35)
    NotifMessage.ZIndex = 102
    NotifMessage.Font = Enum.Font.Gotham
    NotifMessage.Text = message
    NotifMessage.TextColor3 = Color3.fromRGB(255, 255, 255)
    NotifMessage.TextSize = 14
    NotifMessage.TextWrapped = true
    
    NotifShadow.Name = "Shadow"
    NotifShadow.Parent = Notification
    NotifShadow.BackgroundTransparency = 1
    NotifShadow.Position = UDim2.new(0, -10, 0, -10)
    NotifShadow.Size = UDim2.new(1, 20, 1, 20)
    NotifShadow.Image = "rbxassetid://7131350572"
    NotifShadow.ImageColor3 = Color3.fromRGB(0, 0, 0)
    NotifShadow.ImageTransparency = 0.6
    NotifShadow.ScaleType = Enum.ScaleType.Slice
    NotifShadow.SliceCenter = Rect.new(15, 15, 175, 175)
    NotifShadow.ZIndex = 100
    
    -- Animation
    Notification:TweenPosition(UDim2.new(1, -240, 0.5, -40), "Out", "Quart", 0.5, true)
    
    -- Auto-remove after duration
    delay(duration or 3, function()
        Notification:TweenPosition(UDim2.new(1, 10, 0.5, -40), "In", "Quart", 0.5, true, function()
            Notification:Destroy()
        end)
    end)
end

