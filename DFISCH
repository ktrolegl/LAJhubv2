-- Load notification
local function ShowWelcomeNotification()
    local notification = Instance.new("ScreenGui")
    local notifFrame = Instance.new("Frame")
    local title = Instance.new("TextLabel")
    local message = Instance.new("TextLabel")
    
    notification.Name = "LAJHUBWelcomeNotification"
    notification.Parent = game:GetService("CoreGui")
    
    notifFrame.Name = "NotifFrame"
    notifFrame.Size = UDim2.new(0, 250, 0, 100)
    notifFrame.Position = UDim2.new(1, 10, 0.5, -50)
    notifFrame.BackgroundColor3 = colors.background
    notifFrame.BorderColor3 = colors.accent
    notifFrame.BorderSizePixel = 1
    notifFrame.Parent = notification
    
    title.Name = "Title"
    title.Size = UDim2.new(1, 0, 0, 30)
    title.BackgroundColor3 = colors.accent
    title.BorderSizePixel = 0
    title.Font = Enum.Font.GothamBold
    title.Text = "LAJ HUB"
    title.TextColor3 = colors.text
    title.TextSize = 18
    title.Parent = notifFrame
    
    message.Name = "Message"
    message.Size = UDim2.new(1, 0, 0, 70)
    message.Position = UDim2.new(0, 0, 0, 30)
    message.BackgroundColor3 = colors.background
    message.BorderSizePixel = 0
    message.Font = Enum.Font.Gotham
    message.Text = "   Welcome to Speed Hub X!\n   Select a game to begin."
    message.TextColor3 = colors.text
    message.TextSize = 14
    message.TextXAlignment = Enum.TextXAlignment.Left
    message.TextYAlignment = Enum.TextYAlignment.Center
    message.Parent = notifFrame
    
    -- Animation
    notifFrame:TweenPosition(UDim2.new(1, -260, 0.5, -50), Enum.EasingDirection.Out, Enum.EasingStyle.Quart, 0.4, true)
    wait(3)
    notifFrame:TweenPosition(UDim2.new(1, 10, 0.5, -50), Enum.EasingDirection.In, Enum.EasingStyle.Quart, 0.4, true, function()
        notification:Destroy()
    end)
end

ShowWelcomeNotification()
