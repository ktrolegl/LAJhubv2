-- Function to create game-specific tab with scripts
local function CreateGameTab(gameName)
    -- Remove the current game tab if it exists
    if CurrentGameTab then
        CurrentGameTab:Destroy()
        CurrentGameTab = nil
    end
    
    -- Create a new tab for the selected game
    CurrentGameTab = Window:CreateTab(gameName)
    
    -- Create sections and buttons based on the selected game
    if gameName == "Blox Fruits" then
        local MainSection = CurrentGameTab:CreateSection("Blox Fruits Scripts")
        
        CurrentGameTab:CreateButton({
            Name = "Speed Hub X - Blox Fruits",
            Callback = function()
                loadstring(game:HttpGet("https://raw.githubusercontent.com/AhmadV99/Speed-Hub-X/main/Speed%20Hub%20X.lua", true))()
                Rayfield:Notify({
                    Title = "Speed Hub X",
                    Content = "Loading Speed Hub X for Blox Fruits...",
                    Duration = 3,
                })
            end,
        })
        
        -- Additional Blox Fruits scripts could be added here
        
    elseif gameName == "Dead Rails" then
        local MainSection = CurrentGameTab:CreateSection("Dead Rails Scripts")
        
        CurrentGameTab:CreateButton({
            Name = "Speed Hub X - Dead Rails",
            Callback = function()
                loadstring(game:HttpGet("https://raw.githubusercontent.com/AhmadV99/Speed-Hub-X/main/Speed%20Hub%20X.lua", true))()
                Rayfield:Notify({
                    Title = "Speed Hub X",
                    Content = "Loading Speed Hub X for Dead Rails...",
                    Duration = 3,
                })
            end,
        })
        
    elseif gameName == "Muscle Legends" then
        local MainSection = CurrentGameTab:CreateSection("Muscle Legends Scripts")
        
        CurrentGameTab:CreateButton({
            Name = "Speed Hub X - Muscle Legends",
            Callback = function()
                loadstring(game:HttpGet("https://raw.githubusercontent.com/AhmadV99/Speed-Hub-X/main/Speed%20Hub%20X.lua", true))()
                Rayfield:Notify({
                    Title = "Speed Hub X",
                    Content = "Loading Speed Hub X for Muscle Legends...",
                    Duration = 3,
                })
            end,
        })
        
    elseif gameName == "Fisch" then
        local MainSection = CurrentGameTab:CreateSection("Fisch Scripts")
        
        CurrentGameTab:CreateButton({
            Name = "Speed Hub X - Fisch",
            Callback = function()
                loadstring(game:HttpGet("https://raw.githubusercontent.com/AhmadV99/Speed-Hub-X/main/Speed%20Hub%20X.lua", true))()
                Rayfield:Notify({
                    Title = "Speed Hub X",
                    Content = "Loading Speed Hub X for Fisch...",
                    Duration = 3,
                })
            end,
        })
        
    elseif gameName == "The Strongest Battlegrounds" then
        local MainSection = CurrentGameTab:CreateSection("The Strongest Battlegrounds Scripts")
        
        CurrentGameTab:CreateButton({
            Name = "Speed Hub X - The Strongest Battlegrounds",
            Callback = function()
                loadstring(game:HttpGet("https://raw.githubusercontent.com/AhmadV99/Speed-Hub-X/main/Speed%20Hub%20X.lua", true))()
                Rayfield:Notify({
                    Title = "Speed Hub X",
