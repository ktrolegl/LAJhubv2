}

-- Default configuration (will be overridden by Init)
local CONFIG = {
    WebhookURL = nil,
    UserCountWebhookURL = nil,
    KeyList = {},
    GameName = "LAJ HUB",
    DiscordLink = "https://discord.gg/4mgdcfvAJU",
